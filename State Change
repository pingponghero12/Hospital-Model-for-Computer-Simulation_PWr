def state_change():
    for patient in hospitalized:
        if patient == 'green':
            if random.random() < 0.1:
                patient+=1 #getting worse
            elif random.random() < 0.3:
                recoveries += 1 #recovering
                hospitalized.remove(patient)
            else:
                patient=patient
        elif patient == 'yellow':
            if random.random() < 0.3:
                patient+=1 #getting worse
            elif random.random() < 0.6:
                patient-=1 #getting better
            else:
                patient = patient #staying the same
        elif patient == 'orange':
            if random.random() < 0.4:
                patient+=1 #getting worse
            elif random.random() < 0.7:
                patient-=1 #getting better
            else:
                patient = patient #staying the same
        elif patient == 'red':
            if random.random() < 0.5:
                deaths+=1 #dying
                hospitalized.remove(patient)
            elif random.random() < 0.8:
                patient-=1 #getting better
            else:
                patient = patient #staying the same

    for patient in waiting:
        if patient == 'green':
            if random.random() < 0.1:
                patient += 1  # getting worse
            elif random.random() < 0.3:
                recoveries += 1  # recovering
                waiting.remove(patient)
            else:
                patient = patient #staying the same
        elif patient == 'yellow':
            if random.random() < 0.3:
                patient += 1  # getting worse
            elif random.random() < 0.6:
                patient -= 1  # getting better
            else:
                patient = patient #staying the same
        elif patient == 'orange':
            if random.random() < 0.4:
                patient += 1  # getting worse
            elif random.random() < 0.7:
                patient -= 1  # getting better
            else:
                patient = patient #staying the same
        elif patient == 'red':
            if random.random() < 0.5:
                deaths += 1  # dying
                waiting.remove(patient)
            elif random.random() < 0.8:
                patient -= 1  # getting better
            else:
                patient = patient #staying the same
